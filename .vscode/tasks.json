{
    // https://code.visualstudio.com/docs/editor/tasks#_custom-tasks
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-Wno-sign-compare",
                "*.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}